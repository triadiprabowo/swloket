.header
	position relative
	display block
	overflow hidden
	background-image url('/assets/bg-header-landing.jpg')
	background-repeat no-repeat
	background-size cover
	background-attachment fixed
	background-position 50% 50%
	box-shadow 0 2px 1px 1px rgba(0,0,0,0.1)
	height 100vh
	
	.logo
		position absolute
		top 20px
		left 5%
		height 80px
	
	.headline		
		position absolute
		width 50%
		top 40%
		
		&.pos--left
			left 5%
		
		&.pos--right
			right 5%
		
		h1
			color #fff
			font-weight bold
			text-shadow 1px 1px 1px #000
			font-size 50px
			text-transform uppercase
		
		p
			color #fff
			font-size 30px
			text-shadow 1px 1px 1px #000
			
@media only screen and (max-width: 800px)
	.header
		background-position 25% 50%
		
		.logo
			top 15%
			left 40%
			
		.headline
			position relative
			width 100%			
			text-align center
			padding 15px
			box-sizing border-box
			
			&.pos--left
				left 0
			
			h1
				font-size 25px
				line-height 1.65em
				margin-bottom 15px
			
			p
				font-size 18px